#!/bin/sh

# Keyboard controls:
# Super + direction moves focus between windows
# super + number moves focus between desktops
# default config super + alt (+shift)  + direction resizes windows.
# Super + x closes window,
# Super + space opens dmenu so you can run applications,
# Super + s toggles floating
# Super + f toggles fullscreen

sxhkd &

#cursor
xsetroot -cursor_name left_ptr

#wallpaper
nitrogen --restore &

#mouse focus
bspc config focus_follows_pointer true

bspc config top_padding 36
bspc config border_width         2
bspc config window_gap          12

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

#bspc rule -a Gimp desktop='^8' state=floating follow=on
#bspc rule -a Chromium desktop='^2'
#bspc rule -a mplayer2 state=floating
#bspc rule -a Kupfer.py focus=on
#bspc rule -a Screenkey manage=off

bspc config remove_unplugged_monitors true
bspc config remove_disabled_monitors true

#bspc monitor eDP-1 -d 1 2 3 4 5
#bspc monitor eDP-1 -d 1
#bspc monitor DP-1 -d 1 2 3 4 5
#bspc monitor DP-1 -d 2 3
#bspc monitor DP-2 -d 4 5
#bspc monitor DP-1-1 -d 2 3 4 5
bash ~/.config/bspwm/multi-monitor.sh